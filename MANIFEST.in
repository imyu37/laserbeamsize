# --- MANIFEST.in (clean, minimal) ---

# Keep core, readable metadata
include README.rst
include CHANGELOG.rst
include LICENSE.txt
include CITATION.cff
include pyproject.toml

# Include the actual package
recursive-include laserbeamsize *.py

# stuff we don't want to include in package
prune tests
prune docs
prune .github
global-exclude __pycache__ *.py[cod] *.so *.dylib .DS_Store ._* *.swp *.swo

# If you don't want JupyterLite config in your sdist, exclude these:
exclude jupyter-lite.json
exclude jupyter_lite_config.py
exclude requirements-dev.txt
exclude setup.sh
exclude .gitignore
exclude .readthedocs.yaml
exclude .yamllint
exclude Makefile
exclude release.txt
